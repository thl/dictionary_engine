
<% edit_path =  inline_edit_old_definition_path(:id => @old_definition.id, :field => params[:field], :div_suffix => params[:div_suffix] ) 
   field = params[:field]
   div_suffix = params[:div_suffix]
%>	

<% if @old_definition[field].blank?
  	t_content = 'Click to modify'
   else
	case params[:field] 
		when 'literary_period_type_id' then 
			t_content = @old_definition.literary_period_type.title
		when 'literary_form_type_id' then
			t_content = @old_definition.literary_form_type.title
		else
  			t_content = @old_definition[field].s
	end	
   end %>
<%= link_to "#{t_content}".html_safe, edit_path, :class => 'definitions_show', :remote => true %>
