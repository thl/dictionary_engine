
<%= include_tiny_mce_if_needed %>
<%#= wide_tagged_tinymce_script %>

<%= form_for :spelling, :url => { :action => "inline_update", :field => params[:field], :div_suffix => params[:div_suffix] }, :remote =>true do |f| %>
<p>
<%= f.hidden_field :id %>
<% case params[:field] 
	when 'literary_period_type_id' then 
		@data = Category.find(187)
		@literary_period_type = @data.children.collect {|l| [ h(l.title), l.id ] } %>
 		<%= select(:spelling, :literary_period_type_id, @literary_period_type, { :include_blank => true }) %>
<%	when 'literary_form_type_id' then
 		@data = Category.find(186)
		@literary_form_type = @data.children.collect {|l| [ h(l.title), l.id ] } %>
		<%= select(:spelling, :literary_form_type_id, @literary_form_type, { :include_blank => true }) %>
<%	else %>
		<%= f.text_area params[:field], :class => 'mceEditor'  %>
<% end %>


<%= submit_tag 'update'%>

<%= link_to 'Cancel', spelling_inline_show_path(params['id'], :field => params[:field], :div_suffix => params[:div_suffix]), :class => 'definitions_show', :remote => true, :method => :get %> 
</p>
<% end %>