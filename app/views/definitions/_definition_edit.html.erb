<% d = @d %>

<%#= include_tiny_mce_if_needed %>
<%#= wide_tagged_tinymce_script %>

<%= form_for :definition, :url => { :action => "definition_update", :field => params[:field], :div_suffix => params[:div_suffix] }, :remote =>true do |f| %>
<p>
<%= f.hidden_field :id %>
<%#= f.text_area :definition, :class => 'mceEditor' %>
<% case params[:field] 
	when 'numerology', 'encyclopedia_entry', 'image', 'image_caption', 'image_photographer','image_link', 'audio', 'audio_id_number', 'audio_speaker', 'audio_date', 'audio_place_of_recording', 'audio_link', 'video', 'video_id_number', 'video_speaker', 'video_date', 'video_place_of_recording', 'video_link'  then %>
		<%= f.text_field params[:field]  %>
	<%	else %>
		<%= f.text_area params[:field], :class => 'mceEditor'  %>
<% end %>


<%= submit_tag 'update'%>

<%= link_to 'Cancel', definition_show_path(params['id'], :field => params[:field], :div_suffix => params[:div_suffix]), :class => 'definitions_show', :remote => true %> 
</p>
<% end %>
