
<% edit_path = inline_edit_translation_path(@translation, :field => params[:field], :div_suffix => params[:div_suffix] ) 
   field = params[:field]
   div_suffix = params[:div_suffix]
%>	

<% if @translation[field].blank?
  	t_content = 'Click to modify'
   else
	case params[:field] 
		when 'language_type_id' then 
			t_content = @translation.language_type.title
		else
  			t_content = @translation[field].s
	end	
   end %>
<%= link_to "#{t_content}".html_safe, edit_path, :class => 'definitions_show', :remote => true %>
