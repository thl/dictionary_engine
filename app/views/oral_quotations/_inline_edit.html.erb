
<%#= include_tiny_mce_if_needed %>
<%##= wide_tagged_tinymce_script %>

<%= form_for(:oral_quotation, :url => inline_update_oral_quotation_path(@oral_quotation, :field => params[:field], :div_suffix => params[:div_suffix]), :remote =>true) do |f| %>
<p>
<% case params[:field] 
 	when  'source', 'source_title', 'source_type','source_speaker','source_speech_type','source_speech_context','source_location_within_title','source_speech_date','source_speech_date_tibetan','source_speech_date_western','source_location_of_speech', 'image', 'image_caption', 'image_photographer','image_link', 'audio', 'audio_id_number', 'audio_speaker', 'audio_date', 'audio_place_of_recording', 'audio_link', 'video', 'video_id_number', 'video_speaker', 'video_date', 'video_place_of_recording', 'video_link', 'video_description'  then %>
		<%= f.text_field params[:field] %>
<%	else %>
		<%= f.text_area params[:field], :class => 'mceEditor'  %>
<% end %>


<%= submit_tag 'update'%>

<%= link_to 'Cancel', inline_show_oral_quotation_path(@oral_quotation, :field => params[:field], :div_suffix => params[:div_suffix]), :class => 'definitions_show', :remote => true %> 
</p>
<% end %>