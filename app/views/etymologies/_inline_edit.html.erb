
<%= include_tiny_mce_if_needed %>
<%#= wide_tagged_tinymce_script %>

<%= form_for :etymology, :url => { :action => "inline_update", :field => params[:field], :div_suffix => params[:div_suffix] }, :remote =>true do |f| %>
<p>
<%= f.hidden_field :id %>
<%= f.text_area params[:field], :class => 'mceEditor'  %>

<%= submit_tag 'update'%>

<%= link_to 'Cancel', etymology_inline_show_path(params['id'], :field => params[:field], :div_suffix => params[:div_suffix]), :class => 'etymologies_show', :remote => true %> 
</p>
<% end %>